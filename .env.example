# Database (PostgreSQL Only)
# PostgreSQL is provided via docker-compose
DB_PROVIDER=postgresql
DB_USER=codechecker
DB_PASSWORD=your_strong_password_here
DB_HOST=postgres
DB_PORT=5432
DB_NAME=codechecker
# DATABASE_URL is constructed from the above variables
# Format: postgresql://[DB_USER]:[DB_PASSWORD]@[DB_HOST]:[DB_PORT]/[DB_NAME]
DATABASE_URL="postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}"

# OpenAI Configuration
OPENAI_API_KEY=sk-placeholder
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o
MODEL_SUPPORTS_VISION=true

# Task Queue Configuration
MAX_CONCURRENT_ANALYSIS_TASKS=3

# Request Timeout (seconds)
REQUEST_TIMEOUT_SECONDS=180

# Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Settings Security
SETTINGS_TOKEN=your_secure_token

#Logging Configuration
# Available levels: trace, debug, info, warn, error, fatal
# Use 'debug' or 'trace' for development, 'info' for production
LOG_LEVEL=info
# Enable pretty printing (colorized, human-readable logs)
# Set to 'false' in production for JSON output
LOG_PRETTY=false

# Redis Configuration (for BullMQ task queue)
REDIS_HOST=redis
REDIS_PORT=6379
